<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
            </arguments>
        </referenceBlock>


        <referenceContainer name="root">
            <container name="test" as="test" label="Page Header Container"  htmlTag="header" htmlClass="page-header" before="-">
                <container name="container.fluid" as="container_fluid" label="bootstrap container-fluid" htmlTag="div" htmlClass="container-fluid" />
            </container>

        </referenceContainer>




        <move element="logo" as="logo" destination="container.fluid"/>



    </body>
</page>